<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

        {# --- BOOTSTRAP CDN --- #}
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
        >

        <style>
            body {
                background: #f7f7f7;
            }
        </style>

        {% block stylesheets %}{% endblock %}
        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>

    <body>

        {# ---------- NAVBAR ----------- #}
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
            <div class="container">
                <a class="navbar-brand" href="{{ path('home') }}">NotesApp</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">

                        {# Toujours visible #}
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.get('_route') == 'home' %}active{% endif %}"
                               href="{{ path('home') }}">Accueil</a>
                        </li>

                        {# Visible si connecté #}
                        {% if app.user %}
                            <li class="nav-item">
                                <a class="nav-link {% if app.request.get('_route') starts with 'note' %}active{% endif %}"
                                   href="{{ path('note_index') }}">Notes</a>
                            </li>
                        {% endif %}

                    </ul>

                    <ul class="navbar-nav ms-auto">

                        {% if app.user %}
                            <li class="nav-item">
                                <span class="navbar-text me-3">
                                    {{ app.user.email }}
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-light btn-sm" href="{{ path('app_logout') }}">Déconnexion</a>
                            </li>
                        {% else %}
                            <li class="nav-item me-2">
                                <a class="btn btn-outline-light btn-sm"
                                   href="{{ path('app_login') }}">Connexion</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-light btn-sm"
                                   href="{{ path('app_register') }}">S'inscrire</a>
                            </li>
                        {% endif %}

                    </ul>
                </div>
            </div>
        </nav>

        {# ---------- CONTENU PRINCIPAL ---------- #}
        <main>
            <div class="container">
                {% block body %}{% endblock %}
            </div>
        </main>

        {# BOOTSTRAP JS #}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    </body>
</html>