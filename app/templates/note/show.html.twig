{% extends 'base.html.twig' %}

{% block title %}Note {{ note.title }}{% endblock %}

{% block body %}
<div class="col-md-8 mx-auto">
    <div class="card shadow-sm p-4">

        <h2 class="mb-3">{{ note.title }}</h2>

        <p>{{ note.content }}</p>

        <p class="text-muted">
            Créée le : {{ note.createdAt|date('d/m/Y H:i') }}
        </p>

        <div class="d-flex gap-2">

            <a href="{{ path('note_index') }}" class="btn btn-secondary">Retour</a>

            {% if is_granted('edit', note) %}
                <a href="{{ path('note_edit', {'id': note.id}) }}"
                   class="btn btn-warning">Modifier</a>

                <form method="post"
                      action="{{ path('note_delete', {'id': note.id}) }}"
                      onsubmit="return confirm('Supprimer cette note ?');">

                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ note.id) }}">
                    <button class="btn btn-danger">Supprimer</button>
                </form>
            {% endif %}
        </div>

    </div>
</div>
{% endblock %}