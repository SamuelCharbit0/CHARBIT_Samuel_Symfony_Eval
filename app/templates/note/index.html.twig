{% extends 'base.html.twig' %}

{% block title %}Note index{% endblock %}

{% block body %}
    <h1>Note index</h1>

    {# Bouton déconnexion si connecté #}
    {% if app.user %}
        <p>
            Connecté en tant que {{ app.user.email }}.
            <a href="{{ path('app_logout') }}">Se déconnecter</a>
        </p>
    {% endif %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>CreatedAt</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for note in notes %}
            <tr>
                <td>{{ note.id }}</td>
                <td>{{ note.title }}</td>
                <td>{{ note.content }}</td>
                <td>{{ note.createdAt ? note.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('note_show', {'id': note.id}) }}">show</a>
                    {% if is_granted('edit', note) %}
                        <a href="{{ path('note_edit', {'id': note.id}) }}">edit</a>
                        <form method="post" action="{{ path('note_delete', {'id': note.id}) }}" style="display:inline-block;" onsubmit="return confirm('Are you sure?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ note.id) }}">
                            <button class="btn btn-link">delete</button>
                        </form>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('note_new') }}">Create new</a>

    {# Lien vers l’accueil #}
    <p class="mt-3">
        <a href="{{ path('home') }}">Retour à l’accueil</a>
    </p>
{% endblock %}