{% extends 'base.html.twig' %}

{% block title %}Mes notes{% endblock %}

{% block body %}

<div class="card shadow-sm p-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="m-0">
            {% if is_granted('ROLE_ADMIN') %}
                Notes des utilisateurs
            {% else %}
                Mes Notes
            {% endif %}
        </h2>

        <a href="{{ path('note_new') }}" class="btn btn-success">Créer une note</a>
    </div>

    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Date</th>

                {# Nouvelle colonne seulement si ADMIN #}
                {% if is_granted('ROLE_ADMIN') %}
                    <th>Utilisateur</th>
                {% endif %}

                <th width="200px">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for note in notes %}
            <tr>
                <td>{{ note.id }}</td>
                <td>{{ note.title }}</td>
                <td>{{ note.content }}</td>
                <td>{{ note.createdAt ? note.createdAt|date('Y-m-d H:i') : '' }}</td>

                {# Affichage email seulement si ADMIN #}
                {% if is_granted('ROLE_ADMIN') %}
                    <td>{{ note.user.email }}</td>
                {% endif %}

                <td>

                    <a href="{{ path('note_show', {'id': note.id}) }}"
                       class="btn btn-secondary btn-sm">Voir</a>

                    {% if is_granted('edit', note) %}
                        <a href="{{ path('note_edit', {'id': note.id}) }}"
                           class="btn btn-warning btn-sm">Modifier</a>

                        <form method="post"
                              action="{{ path('note_delete', {'id': note.id}) }}"
                              style="display:inline-block"
                              onsubmit="return confirm('Supprimer cette note ?');">

                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ note.id) }}">
                            <button class="btn btn-danger btn-sm">Supprimer</button>
                        </form>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="{% if is_granted('ROLE_ADMIN') %}6{% else %}5{% endif %}"
                    class="text-center text-muted">
                    Aucune note trouvée
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>

{% endblock %}